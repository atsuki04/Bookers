<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

  <tbody>
    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
        <a class="show" href="/books/book_path">Show</a>
      </td>
      <td>
        <a class="edit" href="/books/book_path/edit">Edit</a>
      </td>
      <td>
        <a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="/books/@book">Destroy</a>
      </td>
    </tr>
  </tbody>
</table>
<% end %>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4> 
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>
  
<% end %>  